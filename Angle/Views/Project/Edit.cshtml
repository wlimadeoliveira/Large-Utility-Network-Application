@model LUNA.Models.Models.ProjectModel

@{
    ViewData["Title"] = "Add a Project";
}

@section styles{
    <link rel="stylesheet" href="~/vendor/chosen-js/chosen.css">
}

@section scripts{
   
    <script src="~/vendor/chosen-js/chosen.jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("select").chosen();
            $("chosen-select").chosen();

        });

        document.getElementById("selectcustomer").value = "@Model.CustomerID";
    </script>
}

<div class="content-heading">
    <div>Projects<small>Update a Project</small></div>
</div>
<div class="row">
    <div class="col-xl-6">
        <div class="card card-default">
            <div class="card-header">Your Project Information</div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Project" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <input type="hidden" value="@Model.ID" />
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Title">
                            Title <span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input type="text" value="@Model.Title" asp-for="Title" id="message" required="required" class="form-control"/>

                            <span asp-validation-for="Title" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Description">
                            Description <span class="required">*</span>
                        </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <textarea value="@Model.Description" asp-for="Description" id="message" required="required" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="field-validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Customer</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <select id="selectcustomer" asp-for="CustomerID" asp-items="@(new SelectList(@ViewBag.ListOfCustomers,"ID","CompanyName"))" class="chosen-select form-control">
                                <option value="" disabled selected>Select your Type</option>
                            </select>
                            <span asp-validation-for="CustomerID" class="field-validation-error"></span>
                        </div>
                    </div>







                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <input type="button" onclick="history.go(-1)" value="Cancel" class="btn btn-primary" />
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



